{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kachina Installer",
  "version": "0.1.0",
  "identifier": "click.kachina",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Kachina Installer",
        "width": 520,
        "height": 250,
        "center": true,
        "transparent": true,
        "resizable": false,
        "visible": false,
        "maximizable": false,
        "windowEffects": {
          "effects": ["micaDark", "micaLight", "acrylic"]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  }
}
